{
    "compilerOptions": {
      "rootDirs": ["src"],
      "baseUrl": "./src",
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "esnext",
      "module": "nodenext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "types": ["node"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "isolatedModules": true,
      "noEmit": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "resolveJsonModule": true,
    },
    "include": ["./src", "./test"],
    "exclude": ["node_modules"]
  }